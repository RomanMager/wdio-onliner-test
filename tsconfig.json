{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "module": "CommonJS",
        "target": "ES6",
        "lib": [
            "DOM"
        ],
        "strict": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "types": [
            "node",
            "@wdio/sync",
            "@wdio/mocha-framework",
            "@wdio/selenium-standalone-service"
        ]
    },
    "include": [
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
